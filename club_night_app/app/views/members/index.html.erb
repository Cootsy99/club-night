<h1> <%= @club_name %> Members List: </h1>

<h3>  <%= pluralize(@members.count,  "member")%> </h3>

<div class="container">
  <div class="row">
    <% @memberships.each do |m| %>
        <div class="card text-center text-white bg-dark" style="margin: 10px">
          <div class="card-body">
            <p  class="card-title"style= "margin: 0; font-size: 20px;">
              <%= m.user.name %>
              <span class="" style="font-style: italic; color: gray; font-size: 15px;"> <%= " - #{m.level}" %></span>
              </p>
            <p class="card-text"><%= m.user.about %></p>

        </div>
      </div>
    <% end %>
  </div>
</div>