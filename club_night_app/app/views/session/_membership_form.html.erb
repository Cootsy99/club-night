<%= form_with(method: :put) do |form| %>

<div class="form-check form-switch">

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= form.hidden_field :membership, value: membership.id %>
    <%= membership.user.name %>
    <%= form.check_box :present, 
    {class: "form-check-input", onchange: "this.form.submit()", checked: membership.present? }, 
    true, false %>

  </div>

<% end %>