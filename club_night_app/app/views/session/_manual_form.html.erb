<%= form_with(model: membership, method: :put) do |form| %>

<% if membership.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this player from being selected</h2>

      <ul>
        <% membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= form.hidden_field :id, value: membership.id %>
  
  <div class="container p-2">
    <div class="align-items-center">
        <%= form.check_box :court,
        { class: "form-check-input", onchange: "this.form.submit()", checked: membership.court == court },
        court, 0 %>
  </div>
</div>

</div>
<% end %>