<h1>Create Match for <%= "#{Club.find(params[:club_id]).name} - Court #{params[:court]}"%> </h1>

<br>
<br>

<div class="button-container d-flex justify-content-around">
    <%= form_tag(
        { controller: "session", action: "random", club_id: params[:club_id], court: params[:court] },
         method: :post) do %>
        <%= submit_tag "Random", class: "btn btn-primary btn-lg random-players" %>
      <% end %>

<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
  Fixed Abilty
</button>

  <%= link_to "Manual", root_path, class: "btn btn-primary btn-lg" %>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Ability Selector</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex justify-content-around">

        <%= form_tag(
        { controller: "session", action: "fixed_ability", club_id: params[:club_id], court: params[:court], level: "Beginner" },
         method: :post) do %>
        <%= submit_tag "Beginner", class: "btn btn-primary random-players" %>
      <% end %>

        <%= form_tag(
        { controller: "session", action: "fixed_ability", club_id: params[:club_id], court: params[:court], level: "Intermediate" },
         method: :post) do %>
        <%= submit_tag "Intermediate", class: "btn btn-primary" %>
      <% end %>

        <%= form_tag(
        { controller: "session", action: "fixed_ability", club_id: params[:club_id], court: params[:court], level: "Expert" },
         method: :post) do %>
        <%= submit_tag "Expert", class: "btn btn-primary " %>
      <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- Add additional buttons or actions here -->
      </div>
    </div>
  </div>
</div>

<br>
<br>
<br>


<div class="row">
  <div class="container players-waiting" style="border: 1px solid black;">
    <h3>Available Players</h3>
    <ul class="list-group">
      <% Membership.where(waiting_to_play: true, club_id: params[:club_id], present: true).each_slice(3) do |memberships| %>
        <li class="row">
          <% memberships.each do |membership| %>
            <div class="list-group-item col-md-4" style="margin-bottom: 5px">
              <div class="d-flex align-items-center justify-content-between">
                <span><%= membership.user.name %></span>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

