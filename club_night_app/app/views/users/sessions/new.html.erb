<h2>Log in</h2>

<div class="bg-dark p-3 rounded-lg login_form_container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group m-3">
      <%= f.label :email, class: "text-light" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-dark" %>
    </div>

    <div class="form-group m-3">
      <%= f.label :password, class: "text-light" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-dark" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group m-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-light" %>
      </div>
    <% end %>

    <div class="actions">
    <%= f.submit "Login", class: "btn btn-success" %>
  </div>
  <% end %>
</div>

  <div class="mt-3">
Don't have an account?
<%= link_to("Sign Up", new_registration_path(resource_name), class: "btn btn-outline-info") %>
</div>

<div class="mt-3">
Forgot your password?
<%= link_to("Forgot Password", new_password_path(resource_name), class: "btn btn-outline-info") %>
</div>

