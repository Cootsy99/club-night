<h2>Sign up</h2>

<div class="bg-dark p-4 rounded-lg signup_form_container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-dark" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-group m-3">
      <%= f.label :email, class: "text-light" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-dark" %>
    </div>

    <div class="form-group m-3">
      <%= f.label :name, class: "text-light" %>
      <%= f.text_field :name, autofocus: true, class: "form-control form-control-dark" %>
    </div>

    <div class="form-group m-3">
      <%= f.label :about, class: "text-light" %>
      <span class="text-light">- Say a little bit about yourself, where you're from, your likes, etc.</span>
      <%= f.text_field :about, autofocus: true, class: "form-control form-control-dark" %>
    </div>

    <div class="form-group m-3">
      <%= f.label :password, class: "text-light" %>
      <% if @minimum_password_length %>
        <em class="text-light">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-dark" %>
    </div>

    <div class="form-group m-3">
      <%= f.label :password_confirmation, class: "text-light" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-dark" %>
    </div>

    <div class="form-group m-3">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>
</div>


<div class="mt-3">
Already have an account?
<%= link_to("Login", new_session_path(resource_name), class: "btn btn-info") %>
</div>
