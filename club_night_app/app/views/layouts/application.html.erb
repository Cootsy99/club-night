<!DOCTYPE html>
<html>
  <head>
    <title>ClubNightApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' %>
<%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js' %>

    <%= yield :javascript %>
  </head>

  <body>
   
    


    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">
      
    <img src="<%= asset_path('logo2.png')%>" alt="Logo" class="navbar-logo">
    </a>


     <div id="navbarCollapse">

     
      <% if user_signed_in?%>
      <%= link_to "Home", root_path %>
      &nbsp; | &nbsp;
      <%= link_to "My Profile", user_path(current_user) %>
      &nbsp; | &nbsp;
      <%= link_to "Find New Club", find_new_club_path %>


      &nbsp; | &nbsp;
      Welcome <%= current_user.name%> 
      &nbsp;
      <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}%>
      
      <%else%>
      <%= link_to "Login", new_user_session_path%>
      <%= link_to "Sign Up", new_user_registration_path%>
      <%end%>

    <!-- Navbar content -->

     

      </div>
    </nav>
     <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
  
  <div class="container">
    <%= yield %>
  </div>
  <script>
     window.addEventListener('beforeunload', function() {
    console.log("IN SETTER")
    localStorage.setItem('scrollPosition', window.pageYOffset);
    });
  </script>
  </body>
</html>


