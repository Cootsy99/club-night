<%= form_for @club do |f| %>

 <div class="bg-dark d-flex flex-column text-white justify-content-around align-items-center align-items-middle " style="width: 30vw; border-radius: 20px">
  <div>
    <div class="m-3">
      <%= f.label :name, style: "display: block" %>
      <%= f.text_field :name %>
    </div>

    <div class="m-3">
      <%= f.label :founder, style: "display: block" %>
      <%= f.text_field :founder %>
    </div>

    <div class="m-3">
      <%= f.label :location, style: "display: block" %>
      <%= f.text_field :location %>
    </div>

    <div class="m-3">
      <%= f.label :timetable, style: "display: block" %>
      <%= f.text_field :timetable%>
    </div>

    <div class="m-3">
      <%= f.label :password, style: "display: block" %>
      <%= f.text_field :password %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success m-3" %>
    </div>
  </div>
  </div>

<% end %>