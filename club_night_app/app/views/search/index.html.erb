<%= render 'search/form' %>

<div class="container" style="margin-top: 10px">

<table class = "table table-dark table-striped">
    <thead>
    <tr>
        <th><%=sort_link(@query, :name, "Name", default_order: :asc) %></th>
        <th><%=sort_link(@query, :founder, "Founder", default_order: :asc) %></th>
        <th><%=sort_link(@query, :location, "Location") %></th>
        <th><%=sort_link(@query, :timetable, "Timetable") %></th>
    </tr>
    </thead>


    <tbody>
    <% @clubs.each do |club| %>
        <tr>
            <td> <%= link_to club.name, club%>  </td>
            <td> <%= club.founder%>  </td>
            <td> <%= club.location%>  </td>
            <td> <%= club.timetable%>  </td>



        </tr>
        <% end %>
    </tbody>

            
</table>
</div>
