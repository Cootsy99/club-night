<%= link_to("Create New Club", new_club_path, class: "btn btn-success mt-3") %>

<br>
<br>


<%= render 'search/form' %>

<div class="container" style="margin-top: 10px">

<table class = "table table-dark table-striped">
    <thead>
  <tr>
    <th ><%= sort_link(@query, :name, "Name ↕", default_order: :asc, class: "subtle-link") %></th>
    <th><%= sort_link(@query, :founder, "Founder ↕", default_order: :asc, class: "subtle-link") %></th>
    <th><%= sort_link(@query, :location, "Location ↕", class: "subtle-link") %></th>
    <th><%= sort_link(@query, :timetable, "Timetable ↕", class: "subtle-link") %></th>
    <th style="color: #1d8454;">Members</th>
    <th style="color: #1d8454;"> View Link</th>
  </tr>
</thead>


    <tbody>
    <% @clubs.each do |club| %>
        <tr>
            <td> <%= club.name%>  </td>
            <td style="color: #cacccc;"> <%= club.founder%>  </td>
            <td> <%= club.location%>  </td>
            <td style="color: #cacccc;"> <%= club.timetable%>  </td>
            <td> <%= club.users.count%>  </td>
            <td> <%= link_to("View Club", club_path(club), class: "btn btn-outline-info btn-sm") %>  </td>






        </tr>
        <% end %>
    </tbody>

            
</table>
</div>
